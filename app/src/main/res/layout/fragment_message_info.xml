<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.chat.messageinfo.MessageInfoState" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.chat.messageinfo.MessageInfoVM" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/messageInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/appYellow" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/message_info_heading"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/groupInfoScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageInfoHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/groupInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/sender_message_box"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/senderImgCard"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="13dp"
                        android:elevation="0dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/senderUserCompany"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayoutName">

                        <TextView
                            android:id="@+id/senderImgText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/appLightGrey"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:maxLength="3"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="KV"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:firstName="@{viewState.message.sender.firstName}"
                            app:surName="@{viewState.message.sender.surName}" />

                        <ImageView
                            android:id="@+id/senderImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_img"
                            android:visibility="gone" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/linearLayoutName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="18dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/senderImgCard"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/senderUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@{viewState.message.sender.firstName + ` `+ viewState.message.sender.surName}"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:text="Kristo Vunukainen" />

                        <TextView
                            android:id="@+id/infoSenderMsgTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:ellipsize="none"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/appTextGrey"
                            android:textSize="12sp"
                            tools:text="21:05" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/senderUserCompany"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text="@string/company_heading"
                        android:textColor="@color/appTextGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayoutName"
                        app:layout_constraintStart_toStartOf="@+id/linearLayoutName"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutName" />

                    <TextView
                        android:id="@+id/senderMsgText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start"
                        android:text="@{viewState.message.message}"
                        android:textColor="@color/black"
                        android:textSize="13.6sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/linearLayoutName"
                        app:layout_constraintTop_toBottomOf="@+id/senderUserCompany"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="Curabitur blandit tempus porttitor. Maecenas sed diam eget risus varius blandit sit amet non magna." />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/questionLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/linearLayoutName"
                        app:layout_constraintTop_toBottomOf="@+id/senderUserCompany"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            android:id="@+id/questionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center_vertical"
                            android:text="@{viewState.message.title}"
                            android:textColor="@color/appYellow"
                            android:textSize="13.6sp"
                            tools:text="Questionarie name" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/icon_page"
                            android:tint="@color/appYellow" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mediaLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/input_field_rectangle_transparent"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/senderMsgText"
                        app:layout_constraintStart_toStartOf="@+id/senderMsgText"
                        app:layout_constraintTop_toBottomOf="@+id/senderMsgText"
                        app:layout_constraintVertical_bias="0.0">

                        <HorizontalScrollView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="10dp"
                            android:scrollbars="none"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/profileMenuBtn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/senderImgSendingCard"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="0dp"
                                    android:outlineSpotShadowColor="@color/white"
                                    app:cardCornerRadius="4dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/senderSentImg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/profile_img" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/senderImgSendingCard1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="0dp"
                                    android:outlineSpotShadowColor="@color/white"
                                    app:cardCornerRadius="4dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/senderImgSendingCard"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/senderSentImg1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/profile_img" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/senderImgSendingCard2"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="0dp"
                                    android:outlineSpotShadowColor="@color/white"
                                    app:cardCornerRadius="4dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/senderImgSendingCard1"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/senderSentImg2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/profile_img" />
                                </androidx.cardview.widget.CardView>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </HorizontalScrollView>

                        <ImageView
                            android:id="@+id/profileMenuBtn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/status_ongoing_outline"
                            android:padding="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/icon_more"
                            app:tint="@color/appYellow" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/backGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/icon_delivered"
                        app:tint="@color/appBlue" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/read_by_heading"
                        android:textAllCaps="true"
                        android:textColor="@color/grey"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                        app:layout_constraintStart_toEndOf="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="@+id/imageView7" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/readByRV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        tools:itemCount="10"
                        tools:listitem="@layout/layout_item_message_info_members" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>