<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.locationv2.LocationsV2State" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.locationv2.LocationsV2VM" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LocationHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/backBtn"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat"
                    app:srcCompat="@drawable/icon_back"
                    app:tint="@color/appBlue" />

                <View
                    android:id="@+id/saperaterOne"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/appGrey3"
                    app:layout_constraintBottom_toBottomOf="@+id/backBtn"
                    app:layout_constraintStart_toEndOf="@id/backBtn"
                    app:layout_constraintTop_toTopOf="@+id/backBtn" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutCompat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/saperaterTwo"
                    app:layout_constraintStart_toEndOf="@+id/saperaterOne"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:maxLines="1"
                        android:text="@{viewState.groupName}"
                        android:textColor="@color/appGrey3"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:backgroundTint="@color/black"
                        android:id="@+id/locationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_1sdp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_medium"
                        android:maxLines="1"
                        android:text="@string/files_heading"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <View
                    android:id="@+id/saperaterTwo"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:background="@color/appGrey3"
                    app:layout_constraintBottom_toBottomOf="@+id/backBtn"
                    app:layout_constraintEnd_toStartOf="@id/tvFloorName"
                    app:layout_constraintTop_toTopOf="@+id/backBtn" />


                <TextView
                    android:id="@+id/tvFloorName"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Floor"
                    android:textColor="@color/appGrey3"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/cl_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/LocationHeader">

                <com.zstronics.mypdfviewer.PDFView
                    android:id="@+id/pdfView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/map"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.Material.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/black"
                    android:visibility="visible" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/taskSmallView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/taskSmallViewLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/round_orange"
                        android:backgroundTint="@color/white"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/taskRootState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="From me"
                            android:textColor="@color/appBlue"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/taskUID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_orange"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:text="C101-202"
                            android:textColor="@color/black"
                            android:textSize="11.5sp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/projectSearchBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/allsideshadowfile"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:text="@string/search"
                    android:textColor="@color/appBlue"
                    android:textSize="@dimen/_10sdp"
                    app:drawableTint="@color/appBlue"
                    app:drawableTintMode="src_in"
                    app:drawableTopCompat="@drawable/icon_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/projectFilterBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/allsideshadowfile"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                app:layout_constraintBottom_toTopOf="@id/projectSearchBtn"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_filter"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/icon_filter_blue"
                    app:layout_constraintBottom_toTopOf="@id/filter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:clickable="false"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="@string/filter"
                    android:textColor="@color/appBlue"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_filter"
                    app:layout_goneMarginTop="@dimen/_15sdp" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/projectsSearchCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/allsideshadowfile"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_3sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:src="@drawable/icon_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/black" />

                    <View
                        android:id="@+id/saperator"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@color/appGrey3"
                        app:layout_constraintBottom_toBottomOf="@+id/projectSearchBar"
                        app:layout_constraintStart_toEndOf="@id/ivSearch"
                        app:layout_constraintTop_toTopOf="@+id/projectSearchBar" />

                    <SearchView
                        android:id="@+id/projectSearchBar"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:closeIcon="@drawable/icon_search_cancel"
                        android:elevation="0dp"
                        android:fontFamily="@font/inter_regular"
                        android:iconifiedByDefault="false"
                        android:paddingStart="-2dp"
                        android:paddingEnd="-4dp"
                        android:queryBackground="@android:color/transparent"
                        android:queryHint="Start typing"
                        android:searchIcon="@null"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/cancelSearch"
                        app:layout_constraintStart_toEndOf="@+id/saperator"
                        app:layout_constraintTop_toTopOf="parent"
                        app:theme="@style/AppSearchView" />


                    <TextView
                        android:id="@+id/cancelSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:text="@string/cancel_btn_text"
                        android:textColor="@color/appBlue"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/projectSearchBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/projectSearchBar" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_2sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:visibility="@{viewState.isFilterVisible()?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/projectFilterBtn"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="5dp"
                    android:text="@string/to"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/arrow_drop_up"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/ToNewStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isToNewClicked() ? @drawable/status_new_filled_new : @drawable/status_new_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/text_new"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/ToOngoingStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@{viewState.isToOngoingClicked() ? @drawable/status_ongoing_filled_new : @drawable/status_ongoing_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/ongoing_heading"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:drawableTint="@color/appYellow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/ToDoneStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@{viewState.isToDoneClicked() ? @drawable/status_done_filled_new : @drawable/status_done_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/done_heading"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvfrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="5dp"
                    android:text="@string/from"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/arrow_drop_up"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout

                    android:id="@+id/llFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/fromUnredStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isFromUnreadClicked() ? @drawable/status_new_filled_new : @drawable/status_new_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/unread"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/FromOngoingStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isFromOngoingClicked()? @drawable/status_ongoing_filled_new : @drawable/status_ongoing_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/ongoing_heading"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:drawableTint="@color/appYellow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/FromDoneStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isFromDoneClicked() ? @drawable/status_done_filled_new : @drawable/status_done_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/done_heading"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="5dp"
                    android:text="@string/hidden"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:drawableEndCompat="@drawable/icon_drop_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout

                    android:id="@+id/llHidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/hiddenOngoingStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isHiddenOngoingClicked()? @drawable/status_ongoing_filled_new : @drawable/status_ongoing_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/ongoing_heading"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/hiddenDoneStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isHiddenDoneClicked()? @drawable/status_done_filled_new : @drawable/status_done_outline_new}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/done_heading"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/hiddenCancelledStateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="@{viewState.isHiddenCancelled()? @drawable/status_cancelled_fill : @drawable/status_cancelled_outline}"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="5dp"
                        android:text="@string/canceled"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCheckAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCheckAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="@string/select_all"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/cbSelectAll"
                        android:layout_width="30dp"
                        android:layout_height="37dp"
                        android:layout_marginEnd="3dp"
                        android:checked="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center" />
                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>