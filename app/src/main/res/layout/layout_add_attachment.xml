<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/uploadImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="13dp"
            android:contentDescription="Upload"
            android:src="@drawable/icon_upload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/attachmentNameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/uploadImg"
            app:layout_constraintEnd_toStartOf="@+id/deleteAttachmentBtn"
            app:layout_constraintStart_toEndOf="@+id/uploadImg"
            app:layout_constraintTop_toTopOf="@+id/uploadImg">

            <TextView
                android:id="@+id/attachmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:maxLines="1"
                android:text="New_cover_image.png"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/attachmentSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginTop="3dp"
                android:text="100kb"
                android:textColor="@color/appTextGrey"
                android:textSize="11.5sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/deleteAttachmentBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="14dp"
            android:contentDescription="Delete"
            android:padding="3dp"
            android:src="@drawable/icon_round_close"
            app:layout_constraintBottom_toBottomOf="@+id/uploadImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/uploadImg"
            app:tint="@color/grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>