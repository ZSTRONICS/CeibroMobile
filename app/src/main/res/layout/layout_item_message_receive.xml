<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="message"
            type="com.zstronics.ceibro.data.repos.chat.messages.MessagesResponse.ChatMessage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_field_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/quotedMessageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field_rectangle"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/sideView"
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="0dp"
                    android:background="@drawable/black_vertical_rounded"
                    app:layout_constraintBottom_toBottomOf="@+id/quotedMessage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quotedUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/sideView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Kristo Vunukainen" />

                <TextView
                    android:id="@+id/quotedMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="13.6sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/quotedUser"
                    app:layout_constraintTop_toBottomOf="@+id/quotedUser"
                    tools:text="Curabitur blandit tempus porttitor. Maecenas sed diam eget risus varius blandit sit amet non magna." />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/senderImgCard"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="13dp"
                android:elevation="0dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/senderUserCompany"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutName">

                <TextView
                    android:id="@+id/senderImgText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/appLightGrey"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:maxLength="3"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="KV"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:firstName="@{message.sender.firstName}"
                    app:surName="@{message.sender.surName}" />

                <ImageView
                    android:id="@+id/senderImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_img"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayoutName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="18dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/senderImgCard"
                app:layout_constraintTop_toBottomOf="@+id/quotedMessageLayout">

                <TextView
                    android:id="@+id/senderUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{message.sender.firstName + ` `+ message.sender.surName}"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="Kristo Vunukainen" />

                <TextView
                    android:id="@+id/senderMsgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="0"
                    android:ellipsize="none"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@{message.time}"
                    android:textColor="@color/appTextGrey"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/senderUserCompany"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:maxLines="1"
                android:text="@{message.companyName}"
                android:textColor="@color/appTextGrey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayoutName"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutName"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutName"
                tools:text="@string/company_heading" />

            <TextView
                android:id="@+id/senderMsgText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:text="@{message.message}"
                android:textColor="@color/black"
                android:textSize="13.6sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutName"
                app:layout_constraintTop_toBottomOf="@+id/senderUserCompany"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Curabitur blandit tempus porttitor. Maecenas sed diam eget risus varius blandit sit amet non magna." />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/questionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutName"
                app:layout_constraintTop_toBottomOf="@+id/senderUserCompany"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/questionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:text="@{message.title}"
                    android:textColor="@color/appYellow"
                    android:textSize="13.6sp"
                    tools:text="Questionarie name" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/icon_page"
                    android:tint="@color/appYellow" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mediaLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/input_field_rectangle_transparent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/senderMsgText"
                app:layout_constraintStart_toStartOf="@+id/senderMsgText"
                app:layout_constraintTop_toBottomOf="@+id/senderMsgText"
                app:layout_constraintVertical_bias="0.0">

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="10dp"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/profileMenuBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/senderImgSendingCard"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="0dp"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardCornerRadius="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/senderSentImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_img" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/senderImgSendingCard1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="0dp"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardCornerRadius="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/senderImgSendingCard"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/senderSentImg1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_img" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/senderImgSendingCard2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="0dp"
                            android:outlineSpotShadowColor="@color/white"
                            app:cardCornerRadius="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/senderImgSendingCard1"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/senderSentImg2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_img" />
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/profileMenuBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/status_ongoing_outline"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_more"
                    app:tint="@color/appYellow" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/quickRepliesLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="2dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/senderMsgText"
                app:layout_constraintStart_toStartOf="@+id/senderMsgText"
                app:layout_constraintTop_toBottomOf="@+id/mediaLayout">

                <TextView
                    android:id="@+id/quickReplyDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field"
                    android:backgroundTint="@color/appLightGrey"
                    android:fontFamily="@font/inter_regular"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:text="@string/done_quick_reply"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quickReplyQuestionMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/input_field"
                    android:backgroundTint="@color/appLightGrey"
                    android:fontFamily="@font/inter_regular"
                    android:paddingStart="11dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="11dp"
                    android:paddingBottom="3dp"
                    android:text="@string/question_mark_quick_reply"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/quickReplyDone"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quickReplyOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/input_field"
                    android:backgroundTint="@color/appLightGrey"
                    android:fontFamily="@font/inter_regular"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:text="@string/ok_quick_reply"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/quickReplyQuestionMark"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="@+id/mainLayout"
            app:layout_constraintTop_toBottomOf="@id/mainLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/seenBy">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/seenImage"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shapeAppearanceOverlay="@style/RoundedShapeAbleImage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/seenCount"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:background="@drawable/badge_back"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:text="2"
                    android:textSize="@dimen/_7sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/seenBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp"
                android:fontFamily="@font/inter_medium"
                android:text="Seen"
                android:textColor="#ADB5BD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>