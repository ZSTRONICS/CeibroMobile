<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.profile.ProfileState" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.profile.ProfileVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_back_img">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:layout_marginStart="15dp"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/appYellow" />

            <ImageView
                android:id="@+id/profileMenuBtn"
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:layout_marginEnd="12dp"
                android:onClick="@{(v) -> viewModel.showMenuPopup(v)}"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:srcCompat="@drawable/icon_more" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/profile_heading"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profileMenuBtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileImgCard"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:shape="ring"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/userProfileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        app:loadImageFromUrl="@{viewModel.sessionManager.Companion.user.profilePic}" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@+id/profileImgCard"
                    app:layout_constraintBottom_toBottomOf="@+id/profileImgCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profileImgCard">

                    <TextView
                        android:id="@+id/userProfileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text='@{viewModel.sessionManager.Companion.user.firstName + " " + viewModel.sessionManager.Companion.user.surName}'
                        android:textColor="@color/black"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/userProfileNameSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text='@{"@" +viewModel.sessionManager.Companion.user.firstName + ", " + viewModel.sessionManager.Companion.user.surName}'
                        android:textColor="@color/appTextGrey"
                        android:layout_marginTop="2dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/userProfileEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:drawablePadding="16dp"
                    android:padding="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|fill_vertical"
                    android:text='@{viewModel.sessionManager.Companion.user.email}'
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileImgCard"
                    app:drawableStartCompat="@drawable/icon_at_the_rate" />


                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/appLightGrey"
                    app:layout_constraintEnd_toEndOf="@+id/userProfileEmail"
                    app:layout_constraintStart_toStartOf="@+id/userProfileEmail"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileEmail" />

                <TextView
                    android:id="@+id/userProfileNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawablePadding="16dp"
                    android:padding="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|fill_vertical"
                    android:text='@{viewModel.sessionManager.Companion.user.phone}'
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/userProfileEmail"
                    app:layout_constraintStart_toStartOf="@+id/userProfileEmail"
                    app:layout_constraintTop_toBottomOf="@+id/view3"
                    app:drawableStartCompat="@drawable/icon_call" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/appLightGrey"
                    app:layout_constraintEnd_toEndOf="@+id/userProfileNumber"
                    app:layout_constraintStart_toStartOf="@+id/userProfileNumber"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileNumber" />

                <TextView
                    android:id="@+id/userProfileCompany"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawablePadding="16dp"
                    android:padding="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|fill_vertical"
                    android:text='@{viewModel.sessionManager.Companion.user.companyName}'
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/userProfileNumber"
                    app:layout_constraintStart_toStartOf="@+id/userProfileNumber"
                    app:layout_constraintTop_toBottomOf="@+id/view4"
                    app:drawableStartCompat="@drawable/icon_company" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_27sdp"
                    android:background="@color/semiBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileCompany" />


                <View
                    android:id="@+id/view8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/appDimYellow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/userProfileConnections"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_33sdp"
                        android:layout_marginEnd="@dimen/_22sdp"
                        android:drawablePadding="16dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="start|fill_vertical"
                        android:text="@string/my_connections_text"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:drawableStartCompat="@drawable/icon_contacts"
                        app:drawableEndCompat="@drawable/icon_next" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userProfileConnections" />

                    <TextView
                        android:id="@+id/userProfileInvitations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:drawablePadding="16dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="start|fill_vertical"
                        android:text="@string/invitations_text"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_constraintEnd_toEndOf="@+id/userProfileConnections"
                        app:layout_constraintStart_toStartOf="@+id/userProfileConnections"
                        app:layout_constraintTop_toBottomOf="@+id/view6"
                        app:drawableStartCompat="@drawable/icon_invitations"
                        app:drawableEndCompat="@drawable/icon_next" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userProfileInvitations"
                        app:layout_constraintVertical_bias="0.0" />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
