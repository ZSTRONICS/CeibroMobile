<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.profile.ProfileState" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.profile.ProfileVM" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/appBlue" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/inter_medium"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:text="@string/edit_heading"
                android:textAllCaps="false"
                android:textColor="@color/appBlue"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="1"
                android:text="@string/profile_heading"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/editProfileBtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profileImgCard"
                    android:layout_width="@dimen/_128sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    app:cardBackgroundColor="@color/colorGrey"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/userProfileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_img"
                        app:loadImageFromUrl="@{viewModel.sessionManager.Companion.user.profilePic}" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/userProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text='@{viewModel.sessionManager.Companion.user.firstName + " " + viewModel.sessionManager.Companion.user.surName}'
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileImgCard" />

                <TextView
                    android:id="@+id/userProfileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:text='@{viewModel.sessionManager.Companion.user.phoneNumber}'
                    android:textColor="@color/appTextGrey"
                    android:textSize="13.5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileName" />

                <TextView
                    android:id="@+id/userProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text='@{viewModel.sessionManager.Companion.user.email}'
                    android:textColor="@color/appBlue"
                    android:textSize="14.5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileNumber" />


                <TextView
                    android:id="@+id/userProfileCompany"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text='@{viewModel.sessionManager.Companion.user.companyName}'
                    android:textColor="@color/black"
                    android:textSize="14.5sp"
                    android:visibility="@{viewModel.sessionManager.Companion.user.companyName.isEmpty() ? View.GONE: View.VISIBLE, default = gone}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileEmail" />

                <TextView
                    android:id="@+id/userProfileJob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:drawablePadding="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text='@{viewModel.sessionManager.Companion.user.jobTitle}'
                    android:textColor="@color/black"
                    android:textSize="14.5sp"
                    android:visibility="@{viewModel.sessionManager.Companion.user.jobTitle.isEmpty() ? View.GONE: View.VISIBLE, default = gone}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userProfileCompany" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/userProfileConnections"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_33sdp"
                        android:layout_marginEnd="@dimen/_22sdp"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|fill_vertical"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:paddingStart="4dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="10dp"
                        android:text="@string/my_connections_text"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/icon_next"
                        app:drawableStartCompat="@drawable/icon_contacts"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="2dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userProfileConnections" />

                    <TextView
                        android:id="@+id/userProfileInvitations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|fill_vertical"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:paddingStart="4dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="10dp"
                        android:text="@string/invitations_text"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/icon_next"
                        app:drawableStartCompat="@drawable/icon_invitations"
                        app:layout_constraintEnd_toEndOf="@+id/userProfileConnections"
                        app:layout_constraintStart_toStartOf="@+id/userProfileConnections"
                        app:layout_constraintTop_toBottomOf="@+id/view6" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userProfileInvitations"
                        app:layout_constraintVertical_bias="0.0" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_19sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_medium"
            android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
            android:text="@string/logout_heading"
            android:textAllCaps="false"
            android:textColor="@color/appBlue"
            android:textSize="15sp"
            app:icon="@drawable/icon_logout_new"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/appBlue"
            app:layout_constraintBottom_toTopOf="@+id/versionTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/appBlue"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/versionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Build Version: 1.0.0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
