<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <data>
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_1sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:paddingBottom="@dimen/_8sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/floorField"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:hint="@string/select_group"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColorHint="@color/appTextGrey"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/appTextGrey"
                    app:hintTextColor="@color/appGrey3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/floorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_field_bottom_line"
                        android:clickable="false"
                        android:drawableEnd="@drawable/icon_drop_down"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="top|start"
                        android:inputType="none"
                        android:maxLength="100"
                        android:maxLines="5"
                        android:overScrollMode="always"
                        android:paddingStart="1dp"
                        android:paddingTop="10dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="none"
                        android:text="Electricity"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvAddFloors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/inter_regular"
                    android:padding="@dimen/_6sdp"
                    android:text="@string/add_new_group"
                    android:textColor="@color/appBlue"
                    android:visibility="visible" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAddGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/tvNewGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_typing_new_group"
                        app:layout_constraintEnd_toStartOf="@+id/addGroupBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addGroupBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="13dp"
                        android:background="@drawable/signin_button_back"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/llFloorsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>