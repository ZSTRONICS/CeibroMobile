<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.tasks.v2.taskfromme.TaskFromMeState" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.tasks.v2.taskfromme.TaskFromMeVM" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/taskToMeStatusLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_2sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingBottom="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/unreadStateLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/unreadStateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/status_new_filled_new"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="5dp"
                    android:text="@string/unread_heading"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:drawableTint="@color/appYellow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/unreadStateCount"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/status_new_badge"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:elevation="8dp"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/unreadStateText"
                    app:layout_constraintEnd_toEndOf="@+id/unreadStateText"
                    app:layout_constraintStart_toEndOf="@+id/unreadStateText"
                    app:layout_constraintTop_toTopOf="@+id/unreadStateText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ongoingStateLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ongoingStateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/status_ongoing_outline_new"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="5dp"
                    android:text="@string/ongoing_heading"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:drawableTint="@color/appYellow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ongoingStateCount"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/status_ongoing_badge"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:elevation="8dp"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/ongoingStateText"
                    app:layout_constraintEnd_toEndOf="@+id/ongoingStateText"
                    app:layout_constraintStart_toEndOf="@+id/ongoingStateText"
                    app:layout_constraintTop_toTopOf="@+id/ongoingStateText" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/doneStateLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/doneStateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/status_done_outline_new"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="5dp"
                    android:text="@string/done_heading"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:drawableTint="@color/appYellow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/doneStateCount"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/status_done_badge"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:elevation="8dp"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/doneStateText"
                    app:layout_constraintEnd_toEndOf="@+id/doneStateText"
                    app:layout_constraintStart_toEndOf="@+id/doneStateText"
                    app:layout_constraintTop_toTopOf="@+id/doneStateText" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <android.widget.SearchView
            android:id="@+id/taskFromMeSearchBar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:background="@drawable/search_view_bottom_border"
            android:elevation="0dp"
            android:iconifiedByDefault="false"
            android:paddingStart="-15dp"
            android:paddingEnd="-15dp"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Start typing for search"
            android:searchIcon="@null"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskToMeStatusLayout"
            app:theme="@style/AppSearchView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskFromMeSearchBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskRV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="10"
                    tools:listitem="@layout/layout_task_box_v2_from_me" />
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fromMeOngoingInfoLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/fromMeOngoingDescHeadingEstonia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_semibold"
                        android:maxLines="2"
                        android:text="@string/from_me_ongoing_desc_heading_estonia"
                        android:textColor="@color/appBlue"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/fromMeOngoingDescDetailEstonia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="8"
                        android:text="@string/from_me_ongoing_desc_detail_estonia"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromMeOngoingDescHeadingEstonia" />

                    <TextView
                        android:id="@+id/fromMeOngoingDescHeadingEnglish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:maxLines="2"
                        android:text="@string/from_me_ongoing_desc_heading_english"
                        android:textColor="@color/appBlue"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromMeOngoingDescDetailEstonia" />

                    <TextView
                        android:id="@+id/fromMeOngoingDescDetailEnglish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="8"
                        android:text="@string/from_me_ongoing_desc_detail_english"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromMeOngoingDescHeadingEnglish" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fromMeDoneInfoLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/fromMeDoneDescHeadingEstonia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_semibold"
                        android:maxLines="2"
                        android:text="@string/from_me_done_desc_heading_estonia"
                        android:textColor="@color/appBlue"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/fromMeDoneDescDetailEstonia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="8"
                        android:text="@string/from_me_done_desc_detail_estonia"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromMeDoneDescHeadingEstonia" />

                    <TextView
                        android:id="@+id/fromMeDoneDescHeadingEnglish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:maxLines="2"
                        android:text="@string/from_me_done_desc_heading_english"
                        android:textColor="@color/appBlue"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromMeDoneDescDetailEstonia" />

                    <TextView
                        android:id="@+id/fromMeDoneDescDetailEnglish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/inter_regular"
                        android:maxLines="8"
                        android:text="@string/from_me_done_desc_detail_english"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fromMeDoneDescHeadingEnglish" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>