<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/task_card_less_corner_outline"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hideTaskBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start|center"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:text="@string/hide"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/icon_visibility_off"
            app:drawableTint="@color/black" />

        <TextView
            android:id="@+id/unHideTaskBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start|center"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:text="@string/unhide"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/icon_visibility_on"
            app:drawableTint="@color/black" />

        <TextView
            android:id="@+id/cancelTaskBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start|center"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:text="@string/cancel_heading"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_cross"
            app:drawableTint="@color/black" />

        <TextView
            android:id="@+id/unCancelTaskBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start|center"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:text="@string/un_cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_cross"
            app:drawableTint="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
