<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.projectv2.projectdetailv2.drawing.DrawingsV2State" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.projectv2.projectdetailv2.drawing.DrawingsV2VM" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/drawingHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:elevation="4dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_back"
                    app:tint="@color/appBlue" />


                <View
                    android:id="@+id/viewOne"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@color/appGrey3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/backBtn"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvProjectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:maxLines="1"
                    android:text="Project Name"
                    android:textColor="@color/black_01"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@id/tvCreatorName"
                    app:layout_constraintEnd_toStartOf="@+id/viewTwo"
                    app:layout_constraintStart_toEndOf="@+id/viewOne"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCreatorName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_bold"
                    android:maxLines="1"
                    android:text="Creator Name"
                    android:textColor="@color/appGrey3"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tvProjectName"
                    app:layout_constraintStart_toStartOf="@id/tvProjectName"
                    app:layout_constraintTop_toBottomOf="@id/tvProjectName" />


                <View
                    android:id="@+id/viewTwo"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@color/appGrey3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivForward"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivForward"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_forward"
                    app:tint="@color/appBlue" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/drawingsRV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/drawingFooterLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/drawingHeader"
                tools:itemCount="10"
                tools:listitem="@layout/layout_drawing_item_list" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSearch"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/drawingFooterLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/projectSearchBtn"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/allsideshadowfile"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:text="@string/search"
                        android:textColor="@color/appBlue"
                        android:textSize="@dimen/_10sdp"
                        app:drawableTint="@color/appBlue"
                        app:drawableTintMode="src_in"
                        app:drawableTopCompat="@drawable/icon_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/projectsSearchCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/allsideshadowfile"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="@dimen/_3sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivSearch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:src="@drawable/icon_search"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/black" />

                        <View
                            android:id="@+id/saperator"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginVertical="@dimen/_6sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:background="@color/appGrey3"
                            app:layout_constraintBottom_toBottomOf="@+id/projectSearchBar"
                            app:layout_constraintStart_toEndOf="@id/ivSearch"
                            app:layout_constraintTop_toTopOf="@+id/projectSearchBar" />

                        <SearchView
                            android:id="@+id/projectSearchBar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:closeIcon="@drawable/icon_close_round_grey"
                            android:elevation="0dp"
                            android:fontFamily="@font/inter_regular"
                            android:iconifiedByDefault="false"
                            android:paddingStart="-2dp"
                            android:paddingEnd="-4dp"
                            android:queryBackground="@android:color/transparent"
                            android:queryHint="Start typing"
                            android:searchIcon="@null"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cancelSearch"
                            app:layout_constraintStart_toEndOf="@+id/saperator"
                            app:layout_constraintTop_toTopOf="parent"
                            app:theme="@style/AppSearchView" />


                        <TextView
                            android:id="@+id/cancelSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center"
                            android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text="@string/cancel_btn_text"
                            android:textColor="@color/appBlue"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/projectSearchBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/projectSearchBar" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/drawingFooterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadowfile"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_1sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:paddingBottom="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addNewDrawingBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableTop="@drawable/icon_new_drawing"
                    android:drawableTint="@color/appBlue"
                    android:fontFamily="@font/inter_medium"
                    android:maxLines="1"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:text="@string/add_new_drawings"
                    android:textAllCaps="false"
                    android:textColor="@color/appBlue"
                    android:textSize="@dimen/_9sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/taskForwardBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawableTop="@drawable/icon_visibility_off"
                    android:drawableTint="@color/appBlue"
                    android:fontFamily="@font/inter_medium"
                    android:maxLines="1"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:text="@string/hidden_drawings"
                    android:textAllCaps="false"
                    android:textColor="@color/appBlue"
                    android:textSize="@dimen/_9sdp" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>