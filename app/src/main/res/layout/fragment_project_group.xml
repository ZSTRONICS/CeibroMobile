<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.projects.newproject.group.ProjectGroupState" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.projects.newproject.group.ProjectGroupVM" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appHomeBack">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/groupNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="@dimen/_1sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_1sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/group_name_heading1"
            android:textColor="@color/appTextGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:background="@color/appLightGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/groupNameTV"
            app:layout_constraintTop_toBottomOf="@+id/groupNameTV" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groupsRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_3sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:itemCount="10"
            tools:listitem="@layout/layout_project_groups" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>