<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherEventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="1dp"
                android:background="@drawable/rounded_drawable_grey"
                android:backgroundTint="@color/appMidBlue"
                android:elevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/otherEventText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="3"
                    android:minHeight="20dp"
                    android:paddingStart="9dp"
                    android:paddingEnd="9dp"
                    android:text="User created an event"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/myMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="2dp"
            app:cardMaxElevation="@dimen/_1sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherEventLayout">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_grey"
                android:backgroundTint="@color/appGrey1"
                android:paddingVertical="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:theme="@style/SelectableTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/creatorCard"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:cardBackgroundColor="@color/appGrey"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/creatorImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_img" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/eventBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Creator name"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/creatorCard"
                    app:layout_constraintEnd_toStartOf="@+id/eventPinImg"
                    app:layout_constraintStart_toEndOf="@+id/creatorCard"
                    app:layout_constraintTop_toTopOf="@+id/creatorCard" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/eventPinImg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:padding="3dp"
                    android:src="@drawable/icon_pin_filled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/dotMenu"
                    app:layout_constraintEnd_toStartOf="@+id/dotMenu"
                    app:layout_constraintTop_toTopOf="@+id/dotMenu"
                    app:layout_constraintVertical_bias="0.40" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dotMenu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:paddingStart="3.5dp"
                    android:paddingTop="3.5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="3.5dp"
                    android:src="@drawable/ic_menu_dots"
                    app:layout_constraintBottom_toBottomOf="@+id/eventBy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/eventBy" />


                <TextView
                    android:id="@+id/forwardedToNames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxLength="1500"
                    android:maxLines="15"
                    android:text="To: Kristo Vunukainen ; Kristo Vunukainen"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventBy" />

                <TextView
                    android:id="@+id/invitedNumbers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxLines="10"
                    android:text="Invited: Kristo Vunukainen ; Kristo Vunukainen"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/forwardedToNames" />

                <com.zstronics.ceibro.base.NoScrollTextView
                    android:id="@+id/onlyComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start"
                    android:maxLength="1500"
                    android:maxLines="6"
                    android:text="Only comment will be shown here"
                    android:textColor="@color/black"
                    android:textSize="13.5sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/invitedNumbers" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewMoreLessLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/NonSelectableTextTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/onlyComment">

                    <TextView
                        android:id="@+id/viewMoreBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="@string/view_more"
                        android:textColor="@color/appBlue"
                        android:textSize="12.5sp"
                        android:visibility="gone"
                        app:drawableEndCompat="@drawable/icon_navigate_down"
                        app:drawableTint="@color/appBlue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/viewLessBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="@string/view_less"
                        android:textColor="@color/appBlue"
                        android:textSize="12.5sp"
                        android:visibility="gone"
                        app:drawableEndCompat="@drawable/icon_navigate_up"
                        app:drawableTint="@color/appBlue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/onlyImagesRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:paddingStart="1dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewMoreLessLayout"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_ceibro_only_image" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/imagesWithCommentRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:paddingStart="1dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/onlyImagesRV"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_ceibro_image_with_comment" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filesRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagesWithCommentRV"
                    tools:itemCount="2"
                    tools:listitem="@layout/layout_ceibro_files" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/seenImg"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:padding="1.5dp"
                    android:src="@drawable/icon_done_all"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filesRV"
                    app:tint="@color/appGrey3" />

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:text="Yesterday 13:30"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/seenImg"
                    app:layout_constraintEnd_toStartOf="@+id/seenImg"
                    app:layout_constraintTop_toTopOf="@+id/seenImg" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>