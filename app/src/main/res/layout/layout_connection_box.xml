<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="allConnections"
            type="com.zstronics.ceibro.data.repos.dashboard.connections.MyConnection" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/connectionImgCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="0dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardBackgroundColor="@color/appLightGrey"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/connectionUserCompany"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/connectionUserName">

            <ImageView
                android:id="@+id/connectionImg"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_img"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/connectionImgText"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:maxLength="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="KD"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/connectionUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start"
            android:maxLines="1"
            android:text="Kristo Vunukainen"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/connectionImgCard"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/connectionUserCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/company_name_text"
            android:textColor="@color/appTextGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/connectionPendingStatus"
            app:layout_constraintStart_toStartOf="@+id/connectionUserName"
            app:layout_constraintTop_toBottomOf="@+id/connectionUserName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/connectionPendingStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:gravity="start"
            android:maxLines="1"
            android:text="Request Pending"
            android:visibility="gone"
            android:textColor="@color/appBlue"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/connectionUserCompany"
            app:layout_constraintEnd_toEndOf="@+id/connectionUserName"
            app:layout_constraintTop_toTopOf="@+id/connectionUserCompany" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="2dp"
            android:background="@color/appLightGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/connectionUserName"
            app:layout_constraintStart_toStartOf="@+id/connectionImgCard"
            app:layout_constraintTop_toBottomOf="@+id/connectionUserCompany"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/connectionRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>