<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.chat.groupinfo.GroupInfoState" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.chat.groupinfo.GroupInfoVM" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/groupInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:layout_marginStart="16dp"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/appYellow" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/group_info_heading"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/groupInfoScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupInfoHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/groupInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupInfoImgCard"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_field_rectangle_transparent"
                    android:shape="rectangle"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/groupInfoImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/input_field_rectangle_transparent"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_img" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/groupInfoCameraIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintBottom_toBottomOf="@+id/groupInfoImgCard"
                    app:layout_constraintEnd_toEndOf="@+id/groupInfoImgCard"
                    app:srcCompat="@drawable/icon_camera"
                    app:tint="@color/appYellow" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/groupInfoFieldsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/groupInfoImgCard">

                    <TextView
                        android:id="@+id/groupInfoTitleHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/title_heading"
                        android:textColor="@color/appTextGrey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/etGroupInfoName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/etGroupInfoName" />

                    <View
                        android:id="@+id/view9"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/etGroupInfoName"
                        app:layout_constraintStart_toStartOf="@+id/view11"
                        app:layout_constraintTop_toTopOf="@+id/etGroupInfoName" />

                    <EditText
                        android:id="@+id/etGroupInfoName"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="6dp"
                        android:autofillHints=""
                        android:background="@color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/inter_regular"
                        android:hint="@string/group_name_description"
                        android:text="@{viewState.chatTitle}"
                        android:inputType="textPersonName"
                        android:paddingStart="7dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/appGrey"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView8"
                        app:layout_constraintStart_toEndOf="@+id/view9"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view10"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etGroupInfoName" />

                    <TextView
                        android:id="@+id/groupInfoProjectTitleHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/project_heading"
                        android:textColor="@color/appTextGrey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/groupInfoProjectField"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/groupInfoProjectField" />

                    <View
                        android:id="@+id/view11"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/groupInfoProjectField"
                        app:layout_constraintStart_toEndOf="@+id/groupInfoProjectTitleHeading"
                        app:layout_constraintTop_toTopOf="@+id/groupInfoProjectField" />

                    <EditText
                        android:id="@+id/groupInfoProjectField"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="6dp"
                        android:autofillHints=""
                        android:background="@color/transparent"
                        android:ems="10"
                        android:enabled="false"
                        android:fontFamily="@font/inter_regular"
                        android:hint="@string/project_name_description"
                        android:text="@{viewState.project.title}"
                        android:inputType="textPersonName"
                        android:paddingStart="7dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/appGrey"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/etGroupInfoName"
                        app:layout_constraintStart_toEndOf="@+id/view11"
                        app:layout_constraintTop_toBottomOf="@+id/view10" />

                    <!--                    <View-->
                    <!--                        android:id="@+id/view12"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="1dp"-->
                    <!--                        android:layout_marginTop="6dp"-->
                    <!--                        android:background="@color/appLightGrey"-->
                    <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                        app:layout_constraintStart_toStartOf="parent"-->
                    <!--                        app:layout_constraintTop_toBottomOf="@+id/groupInfoProjectField" />-->

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintBottom_toBottomOf="@+id/etGroupInfoName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/etGroupInfoName"
                        app:srcCompat="@drawable/icon_edit" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/groupInfoTabsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/groupInfoFieldsLayout"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/groupInfoMediaFiles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="16dp"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|fill_vertical"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="7dp"
                        android:text="@string/media_and_files_heading"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:background="@color/transparent"
                        app:drawableEndCompat="@drawable/icon_navigate_next"
                        app:drawableStartCompat="@drawable/icon_media"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="2dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/groupInfoMediaFiles" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/userProfileInvitations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:background="@color/transparent"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|fill_vertical"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="7dp"
                        android:text="@string/pinned_messages_heading"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/icon_navigate_next"
                        app:drawableStartCompat="@drawable/icon_pin"
                        app:layout_constraintEnd_toEndOf="@+id/groupInfoMediaFiles"
                        app:layout_constraintStart_toStartOf="@+id/groupInfoMediaFiles"
                        app:layout_constraintTop_toBottomOf="@+id/view6" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/userProfileInvitations"
                        app:layout_constraintVertical_bias="0.0" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/groupInfoQuestionnaire"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:background="@color/transparent"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|fill_vertical"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="7dp"
                        android:text="@string/questionnaire_heading"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/icon_navigate_next"
                        app:drawableStartCompat="@drawable/icon_questionaire"
                        app:layout_constraintEnd_toEndOf="@+id/groupInfoMediaFiles"
                        app:layout_constraintStart_toStartOf="@+id/groupInfoMediaFiles"
                        app:layout_constraintTop_toBottomOf="@+id/view7" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="2dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/groupInfoQuestionnaire" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/groupInfoChatMembers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_marginTop="9dp"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|fill_vertical"
                        android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                        android:padding="7dp"
                        android:text="@string/chat_members_heading"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableEndCompat="@drawable/icon_navigate_next"
                        app:drawableStartCompat="@drawable/icon_members"
                        app:layout_constraintEnd_toEndOf="@+id/groupInfoMediaFiles"
                        app:layout_constraintStart_toStartOf="@+id/groupInfoMediaFiles"
                        app:layout_constraintTop_toTopOf="@+id/view8" />

<!--                    <include-->
<!--                        android:id="@+id/include2"-->
<!--                        layout="@layout/fragment_chat_members"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="11dp"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@+id/groupInfoChatMembers" />-->

                    <View
                        android:id="@+id/view13"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/appLightGrey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/groupInfoChatMembers"
                        app:layout_constraintVertical_bias="0.0" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>