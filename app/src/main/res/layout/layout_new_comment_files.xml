<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_rectangle"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/uploadImg"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:padding="@dimen/_3sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_document"
            app:layout_constraintBottom_toBottomOf="@+id/nameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameLayout" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/nameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@+id/uploadImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:maxLines="1"
                android:maxLength="32"
                android:singleLine="true"
                android:text="my-new-cover.pdf"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/uploadImg"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:maxLines="1"
                android:text="Size: 100Kb"
                android:textColor="@color/appTextGrey"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fileName"
                app:layout_constraintStart_toStartOf="@+id/fileName"
                app:layout_constraintTop_toBottomOf="@+id/fileName" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/clearIcon"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:focusable="false"
            android:layout_marginStart="@dimen/_4sdp"
            android:focusableInTouchMode="false"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/icon_close_round_grey"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/nameLayout"
            app:layout_constraintStart_toEndOf="@+id/nameLayout"
            app:layout_constraintTop_toTopOf="@+id/nameLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>