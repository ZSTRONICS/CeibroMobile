<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.zstronics.ceibro.ui.tasks.v2.taskdetailv2.fragments.detailcomments.TaskDetailCommentsV2State" />

        <variable
            name="viewModel"
            type="com.zstronics.ceibro.ui.tasks.v2.taskdetailv2.fragments.detailcomments.TaskDetailCommentsV2VM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventsParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filesLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventsRV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_3sdp"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/newMsgLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/layout_ceibro_task_events" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/footerTopLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.7"
                android:background="@color/appGrey3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/input_field"
                android:backgroundTint="@color/appGrey2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sendMsgBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/footerTopLine">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/emojiBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="9dp"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="6dp"
                    android:src="@drawable/icon_emoji"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/appGrey3" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/msgTypingField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/transparent"
                    android:ems="5"
                    android:fontFamily="@font/inter_regular"
                    android:hint="@string/type_a_message_heading"
                    android:inputType="textCapSentences|textMultiLine"
                    android:isScrollContainer="true"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="1500"
                    android:maxLines="5"
                    android:minHeight="42dp"
                    android:minLines="1"
                    android:paddingStart="7dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="4dp"
                    android:scrollbars="vertical"
                    android:text="@={viewState.comment}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/appGrey"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/newImagesRV"
                    app:layout_constraintEnd_toStartOf="@+id/attachmentBtn"
                    app:layout_constraintStart_toEndOf="@+id/emojiBtn"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/downloadImgLayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/msgTypingField"
                    app:layout_constraintStart_toStartOf="@+id/msgTypingField">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/smallImgView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/new_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/smallImgView"
                        app:layout_constraintEnd_toEndOf="@id/smallImgView"
                        app:layout_constraintStart_toStartOf="@id/smallImgView"
                        app:layout_constraintTop_toTopOf="@id/smallImgView" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRetry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/download"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newImagesRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="3dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:paddingStart="1dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/newFilesRV"
                    app:layout_constraintEnd_toStartOf="@+id/attachmentBtn"
                    app:layout_constraintStart_toEndOf="@+id/emojiBtn"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_ceibro_only_image" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newFilesRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="5dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/attachmentBtn"
                    app:layout_constraintStart_toEndOf="@+id/emojiBtn"
                    tools:itemCount="2"
                    tools:listitem="@layout/layout_new_comment_files" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cameraBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="9dp"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="4dp"
                    android:src="@drawable/icon_capture_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/appGrey3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/attachmentBtn"
                    android:layout_width="31dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="3dp"
                    android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                    android:padding="6dp"
                    android:src="@drawable/icon_attachment"
                    app:layout_constraintBottom_toBottomOf="@+id/cameraBtn"
                    app:layout_constraintEnd_toStartOf="@+id/cameraBtn"
                    app:layout_constraintTop_toTopOf="@+id/cameraBtn"
                    app:tint="@color/appGrey3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sendMsgBtn"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/rounded_border_text_view"
                android:backgroundTint="@color/appBlue"
                android:onClick="@{(v) -> viewModel.handlePressOnView(v.id)}"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout7"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_send"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>