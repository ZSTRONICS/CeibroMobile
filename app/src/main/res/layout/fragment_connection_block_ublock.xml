<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/danger_button_bg_stroke"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="@string/block_user"
            android:textAllCaps="false"
            android:textColor="@color/appRed"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/unblock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/primary_button_bg_stroke"
            android:fontFamily="@font/inter_medium"
            android:text="@string/unblock_user"
            android:textAllCaps="false"
            android:textColor="@color/appBlue"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>