<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivFav"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/add_to_fav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/tvProjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Project Name"
            app:layout_constraintEnd_toStartOf="@id/ivDropDown"
            app:layout_constraintStart_toEndOf="@+id/ivFav"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="From :Jaanus Kuston"
            app:layout_constraintEnd_toEndOf="@id/tvProjectName"
            app:layout_constraintStart_toStartOf="@id/tvProjectName"
            app:layout_constraintTop_toBottomOf="@id/tvProjectName" />

        <ImageView

            android:id="@+id/ivDropDown"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/icon_drop_down"
            app:layout_constraintBottom_toBottomOf="@id/ivFav"
            app:layout_constraintEnd_toStartOf="@id/viewOne"
            app:layout_constraintTop_toTopOf="@id/ivFav" />

        <View

            android:id="@+id/viewOne"
            android:layout_width="2dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/appGrey3"
            app:layout_constraintEnd_toStartOf="@id/ivDownload"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView

            android:id="@+id/ivDownload"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/download"
            app:layout_constraintBottom_toBottomOf="@id/ivFav"
            app:layout_constraintEnd_toStartOf="@id/ivOptions"
            app:layout_constraintTop_toTopOf="@id/ivFav" />

        <ImageView
            android:id="@+id/ivOptions"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="#F1B740"
            android:src="@drawable/ic_menu_dots"
            app:layout_constraintBottom_toBottomOf="@id/ivFav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivFav" />

        <LinearLayout
            android:id="@+id/llParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_3sdp"
            android:paddingVertical="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFav"
            app:layout_constraintTop_toBottomOf="@id/tvFrom" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>